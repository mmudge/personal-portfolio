<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <!-- <img class="card-img-top" for next img tag -->
    <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), width: '100%', height: '200px' %>
    <div class="card-body">
      <p class="card-text">
        <span><%=  link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
              <%= portfolio_item.subtitle%></p>

        <% if portfolio_item.technologies %>
          <p><% portfolio_item.technologies.first(2).each do |tech| %>
            <em><%= tech.name %></em>
          <% end %></p>
        <% end %>


      <div class="d-flex justify-content-between align-items-center">
      </div>
    </div>
  </div>
</div>


